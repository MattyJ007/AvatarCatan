<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.catan.mycatan.BattleResources.BattleDefenders"
    tools:showIn="@layout/activity_battle_defenders">

    <TextView
        android:id="@+id/textViewTopU"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ContbuttonU"
        android:text="Choose Defending Heroes"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="26dp" />

    <ListView
        android:id="@+id/ListViewU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTopU"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/ContbuttonU"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewTopU"
        android:background="#F44336"
        android:text="Continue"
        android:textSize="13dp" />

    <Button
        android:id="@+id/ShowbuttonU"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ContbuttonU"
        android:background="#3F51B5"
        android:text="Show Team"
        android:textSize="13dp" />

</RelativeLayout>
